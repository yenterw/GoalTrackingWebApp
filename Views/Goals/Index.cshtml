@model IEnumerable<GoalTrackingWebApp.Models.Goal>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Goals</h1>

<p>
    <a asp-action="Create">Create New Goal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GoalTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoalDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoalTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoalText)
            </td>
            <th>
                @Html.DisplayNameFor(model => model.GoalDate)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Completed" asp-route-id="@item.Id">Mark as Completed</a>
            </td>
        </tr>
}
    </tbody>
</table>
